@model string

@(Html.Kendo().DropDownListFor(m=>m)
                .Name("DeportTankId")
                .OptionLabel(new { Text = "Select ...", Value = "" })
                .HtmlAttributes(new { style = "width:100%; max-width:170px" })
                .DataTextField("Text")
                .DataValueField("Value")
                .Enable(false)
                .Filter("contains").DataSource(ds =>
                {
                    ds.Read(read =>
                    {
                        read.Action("GetFuelTanksByCenterId", "DepotManagement")
                            .Data("editorFilterFuelTanks");
                    }).ServerFiltering(true);
                })
                .ValuePrimitive(true)
                .CascadeFrom("CenterId")

    )

