@model FMS.Web.ViewModels.ListOfValuesDisplayViewModel

@(Html.Kendo().DropDownListFor(m=>m)
        .DataValueField("Value")
        .DataTextField("Text")
        .OptionLabel(new { Text = "Select ...", Value = "" })
        .Filter(FilterType.Contains)
        .HtmlAttributes(new { style = "width:100%; max-width:170px" })
        .DataSource(source => source
            .Read(read => read.Action("GetEmployeeDrivers", "VehicleFuelManagement"))
        )
        .NoDataTemplateId("noDriverDataTemplate")

)